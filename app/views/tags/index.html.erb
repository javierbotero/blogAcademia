<h1>All Tags</h1>

<ul id="articles">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag) %>
    </li>
    <%= link_to 'Delete tag', tag_path(tag), method: :delete, data: {confirm: 'Do you want to delete this tag?'} %>
  <% end %><br/>
  <%= link_to "<< Back to Articles List", articles_path %>
</ul>